<%- include('../header.ejs') %>
<style>
    /* Theme Colors */
.bg-theme {
  background-color: #AA181C !important;
}

/* Theme Colors */
.btn-theme {
  background-color: #AA181C; /* Primary theme color */
  color: #fff;
  border: 1px solid #880015; /* Slightly darker border for depth */
  padding: 0.6rem 1.2rem; /* Comfortable padding for a modern look */
  font-size: 1rem; /* Font size adjustment for readability */
  font-weight: 500; /* Slightly bold for emphasis */
  border-radius: 5px; /* Rounded corners for a soft appearance */
  transition: background-color 0.3s ease, transform 0.2s ease; /* Smooth hover effect */
}

.btn-theme:hover {
  background-color: #880015; /* Darker on hover */
  color: #fff; /* Maintain text color */
  transform: translateY(-2px); /* Subtle lift effect on hover */
  border-color: #660011; /* Slightly darker border on hover */
}


/* Card Styling */
.card {
  border: 1px solid #AA181C;
}

.card-body {
  padding: 1.5rem;
}

/* Responsive Adjustments */
@media (max-width: 768px) {
  .card-body {
    padding: 1rem;
  }

  h1 {
    font-size: 1.5rem;
  }

  .form-label {
    font-size: 0.9rem;
  }

  .btn {
    font-size: 0.9rem;
    padding: 0.5rem 1rem;
  }
}

</style>

<div class="container mt-5">
  <h1 class="text-center text-white bg-theme py-3 rounded">Edit Course</h1>

  <div class="row justify-content-center mt-4">
    <div class="col-lg-6 col-md-8 col-sm-10">
      <div class="card shadow">
        <div class="card-body">
          <form action="/courseUpdate/<%= d._id %>" method="post">
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input type="text" id="name" value="<%= d.name %>" name="name" class="form-control" required>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" id="email" value="<%= d.email %>" name="email" class="form-control" required>
            </div>
            <div class="mb-3">
              <label for="phone" class="form-label">Phone No.</label>
              <input type="number" id="phone" value="<%= d.phone %>" name="phone" class="form-control" required>
            </div>
            <div class="mb-3">
              <label for="dob" class="form-label">DOB</label>
              <input type="date" id="dob" name="dob" value="<%= d.dob %>" class="form-control" required>
            </div>
            <div class="mb-3">
              <label for="address" class="form-label">Address</label>
              <textarea id="address" name="address" class="form-control" rows="3" required><%= d.address %></textarea>
            </div>
            <div class="mb-3">
              <label for="gender" class="form-label">Gender</label><br>
              <input type="radio" id="male" name="gender" value="male" <%= d.gender === 'male' ? 'checked' : '' %>> Male
              <input type="radio" id="female" name="gender" value="female" <%= d.gender === 'female' ? 'checked' : '' %>> Female
            </div>
            <div class="mb-3">
              <label for="education" class="form-label">Education</label>
              <select id="education" name="education" class="form-select" required>
                <option value="" disabled>Select Education</option>
                <option value="10" <%= d.education === '10' ? 'selected' : '' %>>10th</option>
                <option value="12" <%= d.education === '12' ? 'selected' : '' %>>12th</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="course" class="form-label">Course</label>
              <input type="text" id="course" value="<%= d.course %>" readonly class="form-control" name="course">
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-theme">Update Course</button>
              </div>              
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../footer.ejs') %>
